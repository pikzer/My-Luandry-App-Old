<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/light_gray"
    >

    <TextView
        android:id="@+id/textView37"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="326dp"
        android:text="Order:"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/orderNumTV"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="96dp"
        android:text="#FFFFF"
        android:textSize="15sp" />

    <TextView
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="326dp"
        android:text="Service:"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/service_tv"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="96dp"
        android:text="service_tv"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/pickordropTv"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="317dp"
        android:text="Pick up at: " />

    <TextView
        android:id="@+id/droporPickTime"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="96dp"
        android:text="22/22/22 11:11" />

    <androidx.cardview.widget.CardView
        android:id="@+id/imageView1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:background="@color/light_gray"
        android:layout_marginStart="20dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="100dp">

        <ImageView
            android:id="@+id/statusImg"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:background="@color/light_gray"
            android:src="@mipmap/ic_launcher"></ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/statusNow_tv"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="2dp"
        android:text="status-now"
        android:textAlignment="center"
        android:textSize="12sp" />

</RelativeLayout>