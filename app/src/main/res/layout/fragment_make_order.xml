<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_welcome"
    tools:context=".fragment.MakeOrderFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/dropOffDateBtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:src="@drawable/ic_baseline_calendar_today_24"
            app:layout_constraintStart_toEndOf="@+id/dropOffDateEdt"
            app:layout_constraintTop_toTopOf="@+id/dropOffDateEdt" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Drop off Time"
            android:textAlignment="center"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pickUpTimeEdt" />

        <EditText
            android:id="@+id/addressEdt"
            android:layout_width="254dp"
            android:layout_height="98dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:gravity="top|left"
            android:hint="Your address ...."
            android:lines="10"
            android:maxLines="15"
            android:minLines="5"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView25"
            tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded" />

        <ImageButton
            android:id="@+id/openMapBtn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_add_location_24"
            app:layout_constraintStart_toEndOf="@+id/addressEdt"
            app:layout_constraintTop_toTopOf="@+id/addressEdt" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="36dp"
            android:text="Address:"
            app:layout_constraintBottom_toBottomOf="@+id/addressEdt"
            app:layout_constraintEnd_toStartOf="@+id/addressEdt" />

        <EditText
            android:id="@+id/pickUpTimeEdt"
            android:layout_width="207dp"
            android:layout_height="42dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:ems="10"
            android:focusable="false"
            android:inputType="time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pickUpDateEdt" />


        <EditText
            android:id="@+id/dropOffTimeEdt"
            android:layout_width="207dp"
            android:layout_height="42dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:ems="10"
            android:inputType="time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dropOffDateEdt" />

        <ImageButton
            android:id="@+id/pickUpTimeButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:src="@drawable/ic_baseline_access_time_24"
            app:layout_constraintStart_toEndOf="@+id/pickUpTimeEdt"
            app:layout_constraintTop_toTopOf="@+id/pickUpTimeEdt" />

        <EditText
            android:id="@+id/pickUpDateEdt"
            android:layout_width="207dp"
            android:layout_height="42dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:ems="10"
            android:focusable="false"
            android:inputType="date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView24" />

        <EditText
            android:id="@+id/dropOffDateEdt"
            android:layout_width="207dp"
            android:layout_height="42dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="184dp"
            android:background="@color/white"
            android:focusable="false"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView24" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:focusable="false"
            android:layout_marginEnd="4dp"
            android:text="Date:"
            app:layout_constraintEnd_toStartOf="@+id/pickUpDateEdt"
            app:layout_constraintTop_toBottomOf="@+id/textView24" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:text="Date:"
            app:layout_constraintEnd_toStartOf="@+id/dropOffDateEdt"
            app:layout_constraintTop_toTopOf="@+id/dropOffDateEdt" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Time:"
            app:layout_constraintEnd_toStartOf="@+id/dropOffTimeEdt"
            app:layout_constraintTop_toTopOf="@+id/dropOffTimeEdt" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:text="Service:"
            app:layout_constraintEnd_toStartOf="@+id/serviceEdt"
            app:layout_constraintTop_toTopOf="@+id/serviceEdt" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Pick up Time"
            android:textAlignment="center"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addressEdt" />

        <ImageButton
            android:id="@+id/pickUpDate"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="68dp"
            android:src="@drawable/ic_baseline_calendar_today_24"
            app:layout_constraintStart_toEndOf="@+id/pickUpDateEdt"
            app:layout_constraintTop_toBottomOf="@+id/openMapBtn" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="4dp"
            android:text="Time:"
            app:layout_constraintEnd_toStartOf="@+id/pickUpTimeEdt"
            app:layout_constraintTop_toTopOf="@+id/pickUpTimeEdt" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make Your\nPick up"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.063"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.009" />

        <ImageButton
            android:id="@+id/dropOffTimeBtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_baseline_access_time_24"
            app:layout_constraintStart_toEndOf="@+id/dropOffTimeEdt"
            app:layout_constraintTop_toBottomOf="@+id/dropOffDateBtn" />

        <EditText
            android:id="@+id/serviceEdt"
            android:layout_width="207dp"
            android:layout_height="42dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:ems="10"
            android:focusable="false"
            android:hint="Select service"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dropOffTimeEdt" />

        <Button
            android:id="@+id/makeOrderBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Place your order"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/serviceEdt" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>